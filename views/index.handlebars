<div class="container">
	<div class="col-sm-6">
		<h1>BURGER TIME</h1>
	<div class="center">
		<img src="assets/img/burger.png" alt="">
	</div>
	</div>

	<div id="addBurger">
		<div class="col-md-6">
			<h2>Add a Burger</h2>
			<form class="create-update-form center" action="/" method="POST">

				<div class="form-group">
					<label for="ca">Burger Name:</label>
					<input type="text" id="ca" name="burger_name">
				</div>
				<button class="center" type="submit">Send to Kitchen</button>
			</form>
		</div>
	</div>
	</div>


	<div class="row center">
		<div class="col-sm-6 center">
			<h2 id="order">Order up!</h2>
			<div class="row center" id="order">
					<ul>
						{{#each burgers}} {{#unless this.devoured}}
						<li>
							{{this.id}}: {{this.burger_name}}

							<form action="/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button type="submit">Grab it!</button>
							</form>
						</li>
						{{/unless}} {{/each}}
					</ul>
			</div>
		</div>

		<div class="col-sm-6">
			<h2>On Your Plate</h2>
			{{#each burgers}} {{#if this.devoured}}
			<ul>
				{{this.id}}: {{this.burger_name}}
			</ul>
			{{/if}} {{/each}}
		</div>

	</div>
